<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system" translate="label" type="text" sortOrder="300"
                 showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="full_page_cache" translate="label" type="text" sortOrder="10"
                   showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enable_cache_warmer" translate="label" type="select" sortOrder="50"
                       showInDefault="1"  showInWebsite="1" showInStore="1">
                    <label>Enable Cache Warmer</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
